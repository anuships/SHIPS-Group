<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ships.myapplication.modules.AllPrograms">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_margin="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Program"
                android:textStyle="bold"
                android:textSize="24dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <Button
                    android:text="Self-Assessment"
                    android:layout_width="220dp"
                    android:layout_height="40dp"
                    android:id="@+id/self_assessemnt"
                    android:background="@drawable/roundedbutton"
                    android:paddingBottom="0dp"
                    android:textColor="#FFFFFF"
                    android:onClick="goToSelfAssessment"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"/>

                <Button
                    android:text="Factsheet"
                    android:layout_width="220dp"
                    android:layout_height="40dp"
                    android:id="@+id/factsheet"
                    android:background="@drawable/roundedbutton"
                    android:paddingBottom="0dp"
                    android:textColor="#FFFFFF"
                    android:onClick="goToFactSheet"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"/>

                <Button
                    android:text="Cognitive Therapy"
                    android:layout_width="220dp"
                    android:layout_height="40dp"
                    android:id="@+id/cogntiveTherpay"
                    android:background="@drawable/roundedbutton"
                    android:paddingBottom="0dp"
                    android:textColor="#FFFFFF"
                    android:onClick="goToCognitiveTherapy"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"/>

                <Button
                    android:text="Therapeutic Tools"
                    android:layout_width="220dp"
                    android:layout_height="40dp"
                    android:id="@+id/therapeutic_tools"
                    android:background="@drawable/roundedbutton"
                    android:paddingBottom="0dp"
                    android:textColor="#FFFFFF"
                    android:onClick="goToTherapeuticTools"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"/>

                <Button

                    android:text="Treatment"
                    android:layout_width="220dp"
                    android:layout_height="40dp"
                    android:id="@+id/treatment"
                    android:background="@drawable/roundedbutton"
                    android:paddingBottom="0dp"
                    android:textColor="#FFFFFF"
                    android:onClick="goToTreatment"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="Back"
                android:id="@+id/goBack"
                android:background="@drawable/roundedbutton"
                android:textColor="#FFFFFF"
                android:onClick="goBack"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"/>

            <Button
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="Records"
                android:id="@+id/records"
                android:background="@drawable/roundedbutton"
                android:textColor="#FFFFFF"
                android:onClick="goToRecords"
                android:layout_gravity="center" />
        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
