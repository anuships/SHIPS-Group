<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:layout_margin="10dp"
    tools:context="com.example.ships.myapplication.EMDR.EMDRActivitySettings">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/EMDR_Title"
        android:text="EMDR"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="24dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/EMDR_Guide_Title"
        android:text="What is EMDR?"
        android:layout_below="@id/EMDR_Title"
        android:textStyle="italic"
        android:textSize="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/EMDR_Guide_Title"
        android:id="@+id/emdr_description"
        android:text="Eye Movement Desensitisation and Reprocessing Therapy (EMDR) has been shown to move you to a neutral state, allowing you to neutralise negative feelings, reinforce positive feelings or simply relax!\nBy applying this technique to visualised flight scenarios, you may be able to reduce your discomfort associated with these situations"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emdr_description"
        android:id="@+id/emdr_negative_neutralisation_heading"
        android:text="Negative neutralisation"
        android:textSize="18dp"
        android:layout_marginTop="20dp">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emdr_negative_neutralisation_heading"
        android:id="@+id/emdr_negative_neutralisation_description"
        android:text="While you complete the eye movement exercise, remember an uncomfortable memory you have of flying or else visualise yourself in this unpleasant flying scenario.">
    </TextView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emdr_negative_neutralisation_description"
        android:id="@+id/emdr_positive_reinforcement_heading"
        android:textSize="18dp"
        android:text="Positive reinforcement"
        android:layout_marginTop="20dp">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emdr_positive_reinforcement_heading"
        android:id="@+id/emdr_positive_reinforcement_description"
        android:text="During the eye movement exercise, focus on a positive outcome of flying. You make your way through the airport, board a plane and sit safely in your seat. The plane lands safely at your destination">
    </TextView>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/emdr_settings_buttons_layout"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:id="@+id/emdr_guide_back_button"
            android:text="Back"
            android:background="@drawable/roundedbutton"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/emdrstartbutton"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:onClick="sendMessage"
            android:text="Settings"
            android:background="@drawable/roundedbutton"
            android:textColor="#FFFFFF"/>


    </LinearLayout>


</RelativeLayout>