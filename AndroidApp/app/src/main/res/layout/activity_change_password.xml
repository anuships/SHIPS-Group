<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ships.myapplication.OtherInterfaces.ChangePassword">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:textSize="30dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/currentPW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginLeft="15dp"
                android:text="Current Password" />

            <EditText
                android:id="@+id/currentPWInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:ems="10"
                android:theme="@style/ColorCheckBox"
                android:inputType="textPassword"
                android:text="" />

            <TextView
                android:id="@+id/newPWView"
                android:layout_marginLeft="15dp"
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Password" />

            <EditText
                android:id="@+id/newPWInput"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:theme="@style/ColorCheckBox"
                android:inputType="textPassword"
                android:text="" />

            <TextView
                android:id="@+id/newPWConfirmView"
                android:layout_marginLeft="15dp"
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm Password" />

            <EditText
                android:id="@+id/newPWConfirmInput"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:theme="@style/ColorCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="40dp">
            <Button
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="Cancel"
                android:id="@+id/cancel"
                android:background="@drawable/roundedbutton"
                android:paddingBottom="0dp"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                android:onClick="cencel"
                android:layout_marginRight="20dp"/>

            <Button
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="Confirm"
                android:id="@+id/confirm"
                android:background="@drawable/roundedbutton"
                android:paddingBottom="0dp"
                android:textColor="#FFFFFF"
                android:onClick="confirmChangePassword"
                android:layout_gravity="center" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
