<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ships.myapplication.loginregistration.TermsAndConditions">


    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="I have read and agreed the terms and conditions"
        android:theme="@style/ColorCheckBox"
        android:textSize="20dp"
        android:layout_marginBottom="65dp"
        android:onClick="onCheckboxClicked"
        android:layout_alignBottom="@+id/linearLayout"
        android:layout_centerHorizontal="true" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:padding="0dp"
        android:paddingBottom="20dp"
        android:id="@+id/linearLayout"
        android:layout_marginBottom="27dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/checkBox"
        android:layout_alignEnd="@+id/checkBox">

        <Button
            android:id="@+id/back"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/manage_but"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:layout_toLeftOf="@+id/textView"
            android:layout_toStartOf="@+id/textView"
            android:background="@drawable/roundedbutton"
            android:onClick="back"
            android:paddingBottom="0dp"
            android:text="Back"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/next"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/roundedbutton"
            android:onClick="next"
            android:paddingBottom="0dp"
            android:text="Next"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terms and conditions"
        tools:layout_editor_absoluteX="125dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp" />
</RelativeLayout>
