<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/future_program"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ships.myapplication.homepageAndRegistration.LoginActivity"
    android:background="@drawable/gradient">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">


                <Button
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="Long Term"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:id="@+id/long_term"
                    android:background="@drawable/roundedbutton"
                    android:paddingBottom="0dp"
                    android:textColor="#FFFFFF"
                    android:onClick="viewProgram"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"/>
                <Button
                    android:layout_below="@id/long_term"
                    android:layout_alignLeft="@id/long_term"
                    android:text="Mid Term"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:id="@+id/mid_term"
                    android:background="@drawable/roundedbutton"
                    android:paddingBottom="0dp"
                    android:textColor="#FFFFFF"
                    android:onClick="viewProgram"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"/>
                <Button
                    android:layout_below="@id/mid_term"
                    android:layout_alignLeft="@id/mid_term"
                    android:text="Short Term"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:id="@+id/short_term"
                    android:background="@drawable/roundedbutton"
                    android:paddingBottom="0dp"
                    android:textColor="#FFFFFF"
                    android:onClick="viewProgram"
                    android:layout_gravity="center"/>
            </RelativeLayout>
        </LinearLayout>

        <Button
            android:text="back"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/manage_but"
            android:background="@drawable/roundedbutton"
            android:paddingBottom="0dp"
            android:textColor="#FFFFFF"
            android:onClick="goBack"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center" />


    </LinearLayout>

</RelativeLayout>
