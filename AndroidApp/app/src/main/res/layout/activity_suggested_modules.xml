<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/future_program"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ships.myapplication.homepageAndRegistration.LoginActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="Suggested Modules"
                android:textSize="24dp"
                android:textStyle="bold"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/long_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Long Term (2 Weeks) Program" />

                <Button
                    android:text="Long Term"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:id="@+id/long_term"
                    android:background="@drawable/roundedbutton"
                    android:paddingBottom="0dp"
                    android:textColor="#FFFFFF"
                    android:onClick="viewLongTermProgram"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:id="@+id/short_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Short Term (1 Week) Program" />

                <Button
                    android:text="Short Term"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:id="@+id/short_term"
                    android:background="@drawable/roundedbutton"
                    android:paddingBottom="0dp"
                    android:textColor="#FFFFFF"
                    android:onClick="viewShortTermProgram"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:id="@+id/all_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View All Modules" />

                <Button
                    android:id="@+id/mid_term"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/roundedbutton"
                    android:onClick="viewAllProgram"
                    android:paddingBottom="0dp"
                    android:text="All Modules"
                    android:textColor="#FFFFFF" />

            </LinearLayout>
        </LinearLayout>

        <Button
            android:text="back"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/add_all_but"
            android:background="@drawable/roundedbutton"
            android:textColor="#FFFFFF"
            android:onClick="goBack"
            android:layout_gravity="center" />


    </LinearLayout>

</RelativeLayout>
