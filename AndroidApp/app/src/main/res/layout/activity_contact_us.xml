<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ships.myapplication.OtherInterfaces.ContactUs">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Us"
                android:textSize="30dp"
                android:layout_marginLeft="36dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="17dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="36dp"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Information"
                    android:id="@+id/title"
                    android:textSize="20dp"
                    android:layout_marginBottom="30dp"/>
                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address: ANU, canberra, ACT, Australia 2601"
                    android:layout_below="@id/title"
                    android:textSize="18dp"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/telephone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="telephone: +61 xxxx xxxx "
                    android:layout_below="@id/address"
                    android:textSize="18dp"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/fax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fax: +61 xxxx xxxx"
                    android:layout_below="@id/telephone"
                    android:textSize="18dp"
                    android:layout_marginBottom="10dp"/>
                <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-mail: ships-anu@sample.com"
                android:layout_below="@id/fax"
                android:textSize="18dp"
                android:layout_marginBottom="10dp"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp">
            <Button
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="Homepage"
                android:id="@+id/cancel"
                android:background="@drawable/roundedbutton"
                android:paddingBottom="0dp"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                android:onClick="goToHomePage"
                android:layout_marginRight="20dp"/>

            <Button
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="FAQs"
                android:id="@+id/confirm"
                android:background="@drawable/roundedbutton"
                android:paddingBottom="0dp"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                android:textAllCaps="false"/>
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
