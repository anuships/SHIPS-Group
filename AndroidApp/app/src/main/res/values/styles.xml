<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="HiddenTitleTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/myColor</item>
        <item name="colorPrimaryDark">@color/myColor</item>
        <item name="colorAccent">@color/myColor</item>

        <item name="android:windowBackground">@color/myColor</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="HiddenTitleTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="HiddenTitleTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="ColorCheckBox">
        <item name="colorAccent">#D2691E</item>
    </style>


    <style name="ColorRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorAccent">@color/orangeButton</item>
        <item name="colorControlHighlight">@color/orangeButton</item>
        <item name="android:colorPressedHighlight">@color/orangeButton</item>
        <item name="colorPrimaryDark">@color/orangeButton</item>
        <item name="colorPrimary">@color/orangeButton</item>
        <item name="colorControlActivated">@color/orangeButton</item>
    </style>

</resources>
